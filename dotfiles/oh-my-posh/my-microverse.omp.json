{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#3A86FF",
          "properties": {
            "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} "
          },
          "style": "plain",
          "type": "os"
        },
        {
          "foreground": "#f1184c",
          "properties": {
            "template": " {{ .UserName }} "
          },
          "style": "plain",
          "type": "session"
        },
        {
          "foreground": "#f1184c",
          "properties": {
            "template": "- root \uf0e7"
          },
          "style": "plain",
          "type": "root"
        },
        {
          "foreground": "#FFBB00",
          "properties": {
            "template": "{{ .CurrentDate | date .Format }} ",
            "time_format": "2006-01-02 15:04:05"
          },
          "style": "plain",
          "type": "time"
        },
        {
          "foreground": "#33DD2D",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full",
            "template": "\ue5ff {{ .Path }} "
          },
          "style": "plain",
          "type": "path"
        },
        {
          "foreground": "#3A86FF",
          "properties": {
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} "
          },
          "style": "plain",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#f1184c",
          "properties": {
            "template": "\u279c "
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 1
}
